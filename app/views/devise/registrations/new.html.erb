<div class="card w-25 mx-auto">
  <div class="card-header">
    Sign-up
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "username(email)", class: "col-12" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "password (at least" + @minimum_password_length.to_s + " characters lenght)", class: "col-12" %>
        <% else %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "col-12" %>
        <% end %><br />
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password confirmation", class: "col-12" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary col-12" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
